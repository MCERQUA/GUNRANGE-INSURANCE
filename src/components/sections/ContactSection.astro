<section id="contact" class="py-20 px-4">
  <div class="max-w-4xl mx-auto">
    <div class="glass-dark rounded-3xl p-8 md:p-12">
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-8 text-white">
        Get Protected Today
      </h2>
      
      <p class="text-center text-xl text-smoke/80 mb-12">
        Contact our specialists for a custom insurance solution tailored to your range
      </p>
      
      <form class="space-y-6">
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-smoke/80 mb-2">First Name</label>
            <input 
              type="text" 
              class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-smoke/50 focus:outline-none focus:border-target-red transition-colors"
              placeholder="John"
            />
          </div>
          <div>
            <label class="block text-sm font-medium text-smoke/80 mb-2">Last Name</label>
            <input 
              type="text" 
              class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-smoke/50 focus:outline-none focus:border-target-red transition-colors"
              placeholder="Doe"
            />
          </div>
        </div>
        
        <div>
          <label class="block text-sm font-medium text-smoke/80 mb-2">Email</label>
          <input 
            type="email" 
            class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-smoke/50 focus:outline-none focus:border-target-red transition-colors"
            placeholder="john@example.com"
          />
        </div>
        
        <div>
          <label class="block text-sm font-medium text-smoke/80 mb-2">Phone</label>
          <input 
            type="tel" 
            class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-smoke/50 focus:outline-none focus:border-target-red transition-colors"
            placeholder="(555) 123-4567"
          />
        </div>
        
        <div>
          <label class="block text-sm font-medium text-smoke/80 mb-2">Message</label>
          <textarea 
            rows="4"
            class="w-full px-4 py-3 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 text-white placeholder-smoke/50 focus:outline-none focus:border-target-red transition-colors resize-none"
            placeholder="Tell us about your gun range or firearms business..."
          ></textarea>
        </div>
        
        <button 
          type="submit"
          class="w-full py-4 bg-target-red hover:bg-target-red/90 text-white rounded-full font-semibold text-lg transition-all duration-300 shadow-xl hover:shadow-2xl hover:scale-105"
        >
          Get Your Free Quote
        </button>
      </form>
    </div>
  </div>
</section>
